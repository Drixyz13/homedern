<% if controller_name != 'sessions' %>
  <%= link_to "Se connecter", new_session_path(resource_name),
      class: "btn bg-purple text-white btn-hover-purple w-100 mb-2" %>
<% end %>

<% if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Créer un compte", new_registration_path(resource_name),
      class: "btn btn-outline-light w-100 mb-2" %>
<% end %>

<% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Mot de passe oublié ?", new_password_path(resource_name),
      class: "text-purple d-block mb-2 text-decoration-none" %>
<% end %>

<% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Pas reçu les instructions de confirmation ?", new_confirmation_path(resource_name),
      class: "text-purple d-block mb-2 text-decoration-none" %>
<% end %>

<% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Pas reçu les instructions de déverrouillage ?", new_unlock_path(resource_name),
      class: "text-purple d-block mb-2 text-decoration-none" %>
<% end %>

<% if devise_mapping.omniauthable? %>
  <% resource_class.omniauth_providers.each do |provider| %>
    <%= button_to "Connexion avec #{OmniAuth::Utils.camelize(provider)}",
        omniauth_authorize_path(resource_name, provider),
        class: "btn btn-outline-light w-100 mt-2",
        data: { turbo: false } %>
  <% end %>
<% end %>
