<section class="py-5 mt-5 text-white" style="background-color: #111; min-height: 100vh;">
  <div class="container pt-5">
    <h2 class="text-center fw-bold text-purple mb-4">Réinitialiser votre mot de passe</h2>

    <div class="row justify-content-center">
      <div class="col-md-6">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="mb-4">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <%= f.submit "Recevoir le lien de réinitialisation", class: "btn bg-purple text-white w-100 btn-hover-purple" %>
        <% end %>

        <div class="text-center mt-4">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>
