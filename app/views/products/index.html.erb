<section class="py-5 mt-5 text-white" style="background: radial-gradient(circle at center, #111 0%, #000 100%);">

  <div class="container">

    <% @products.each do |product| %>
      <div class="row align-items-center mb-5 <%= 'flex-md-row-reverse' if product.name.include?("Temps") || product.name.include?("Connectée") %>">
        <div class="col-md-6">
          <h3 class="fw-bold text-purple"><%= product.name %></h3>
          <p><%= product.description %></p>
          <p class="fw-bold"><%= number_to_currency(product.price_cents / 100.0, unit: "€") %></p>
          <%= link_to "Voir le produit", product_path(product), class: "btn bg-purple text-white btn-hover-purple mt-3" %>
        </div>
        <div class="col-md-6">
          <%= image_tag product.image_url, alt: product.name, class: "img-fluid rounded shadow" %>
        </div>
      </div>
    <% end %>
  </div>
</section>
