<%= render "shared/hero" %>
<div class="container mt-5">
  <h1 class="mb-4">Notre catalogue</h1>
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <img src="<%= product.image_url %>" class="card-img-top" alt="<%= product.name %>">
          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text"><%= truncate(product.description, length: 100) %></p>
            <p class="fw-bold"><%= number_to_currency(product.price_cents / 100.0, unit: "â‚¬") %></p>
            <%= link_to "Voir", product_path(product), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
