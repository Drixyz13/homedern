<div class="container mt-5">
  <div class="row">
    <div class="col-md-6">
      <img src="<%= @product.image_url %>" class="img-fluid rounded" alt="<%= @product.name %>">
    </div>
    <div class="col-md-6">
      <h2><%= @product.name %></h2>
      <p class="lead"><%= @product.description %></p>
      <p class="fw-bold fs-4">Prix : <%= number_to_currency(@product.price_cents / 100.0, unit: "€") %></p>

      <%= link_to "Retour au catalogue", products_path, class: "btn btn-outline-secondary me-2" %>
      <%= button_to "Ajouter au panier", "#", method: :post, class: "btn btn-success disabled" %> <!-- bientôt activé -->
    </div>
  </div>
</div>
