      <%= image_tag "partners/techcrunch.svg",   alt: "TechCrunch",   height: 50, class: "logo-invert" %>
      <%= image_tag "partners/lemonde.svg",      alt: "Le Monde",     height: 50, class: "logo-invert" %>
