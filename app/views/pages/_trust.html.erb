        <%= image_tag "partners/mistubishi.svg",   alt: "Mitsubishi",   height: 50, class: "logo-invert" %>
        <%= image_tag "partners/samsung.svg",      alt: "Samsung",      height: 50, class: "logo-invert" %>
        <%= image_tag "partners/myfitnesspal.svg", alt: "MyFitnessPal", height: 50, class: "logo-invert" %>
